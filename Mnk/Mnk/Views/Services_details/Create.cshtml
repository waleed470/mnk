<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    @using (Html.BeginForm("Create", "Services_details", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <form class="floating-labels m-t-40">
                            <div class="form-group m-b-40">
                                <label for="input1"> Services Subject  </label>
                                <input type="text" name="Service_Detail_Name" class="form-control" id="input1">
                                <span class="bar"></span>


                            </div>
                            <div class="form-group m-b-40">
                                <h4 class="card-title"> Services </h4>
                                <select class="select2 form-control custom-select" name="Service_Id" style="width: 100%; height:36px;">
                                    
                                    
                                       @foreach (var item in db.Servicess.ToList())
                                       {
                                        <option value="@item.Service_Id">@item.Service_Name</option>
                                       }
                                        
                                    

                                </select>
                            </div>
                            
                            
                            <div class="form-group">
                                <textarea class="textarea_editor form-control" name="Service_Detail_Description" rows="15" placeholder="Enter text ..."></textarea>
                            </div>
                           

                                <div class="floating-labels m-t-40">

                                    <h4 class="card-title">Sevices details Image</h4>
                                    <label for="input-file-now"></label>
                                    <input type="file" name="doc" id="input-file-now" class="dropify" />
                                    <span class="bar"></span>


                                </div>

                                <p style="margin-top:50px;"></p>

                                <button type="submit" name="Create" class="btn waves-effect waves-light btn-outline-primary">Save</button>
</form>
                    </div>
                </div>
            </div>
        </div>
       
    }
</div>


