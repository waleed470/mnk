@model Mnk.Models.Board_Location

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor"> Edit </h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)"> Location Details</a></li>

            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>



<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    @using (Html.BeginForm("Edit", "Board_Location", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.Board_Location_Id)
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <form class="floating-labels m-t-40">
                            <div class="form-group m-b-40">
                                <label for="input1">Location</label>
                                <input type="text" name="Board_location_name" value="@(Model.Board_location_name)" class="form-control" id="input1">
                                <span class="bar"></span>


                            </div>

                            <p style="margin-top:50px;"></p>

                            <div class="form-group m-b-40">
                                <label for="input6">Location STATUS</label>
                                <select class="form-control" name="Board_location_Status" value="@(Model.Board_location_Status)">
                                    <option value="true">Active</option>
                                    <option value="false">InActive</option>
                                </select><span class="bar"></span>

                            </div>

                            <p style="margin-top:50px;"></p>




                            <button type="submit" name="Edit" class="btn waves-effect waves-light btn-outline-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>